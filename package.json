{
    "name": "LongboardHills",
    "devDependencies": {
        "node-persist": "latest",
        "body-parser": "latest",
        "server-static": "latest",
        "express": "latest"
    },
    "scripts": {
        "build": "browserify src/scripts/main.js -t babelify -o build/app.js",
        "watch-js": "watchify src/scripts/main.js -t babelify -o build/app.js",
        "watch-css": "sass --watch src/styles/main.scss:build/styles/main.css",
        "watch": "npm run watch-js & npm run watch-css & npm start",
        "start": "babel-node server.js"
    }
}
